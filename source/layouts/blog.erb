<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= data.page.title || "Paulo Ragonha" %></title>

    <%= stylesheet_link_tag "normalize", "all" %>
    <%= javascript_include_tag  "all" %>
  </head>

  <body class="blog-post <%= page_classes %>">
    <div class='header-container'>
      <div class='header'>
        <a class='blog-by' href="/blog">Paulo Ragonha</a>
        <div class="social">
          <a class='linkedin-link' href="http://linkedin.com/in/pirelenito" title='LinkedIn'><span>LinkedIn</span></a>
          <a class='twitter-link' href="http://twitter.com/pirelenito" title='Twitter'><span>Twitter</span></a>
          <a class='github-link' href="http://github.com/pirelenito" title='GitHub'><span>GitHub</span></a>
        </div>
      </div>
    </div>

    <article>
      <header>
        <h1><%= data.page.title %></h1>

        <p class='publish-date'>Posted by <a href="/">Paulo Ragonha</a> on <time><%= Date.parse(data.page.date).strftime('%e %B, %Y') %></time></p>
      </header>
    <%= yield %>
    </article>
  </body>

  <script type="text/javascript">
    var _gaq = _gaq || [];
    _gaq.push(['_setAccount', 'UA-39352502-1']);
    _gaq.push(['_trackPageview']);

    (function() {
      var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
      ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
      var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
    })();

  </script>
</html>
