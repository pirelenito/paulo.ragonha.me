<div class='header-container'>
  <div class='header'>
    <span class='blog-by'>Paulo Ragonha</span>
    <a class='blog-link' href="/blog" title='All entries'><span>All entries</span></a>
    <a class='home-link' href="/" title='About me'><span>About me</span></a>
  </div>
</div>

<ol>
  <% page_articles.each_with_index do |article, i| %>
    <li>
      <article>
        <h1><%= link_to article.title, article %></h1>

        <p class='publish-date'>Posted by <a href="/">Paulo Ragonha</a> on <time><%= article.date.strftime('%e %B, %Y') %></time></p>
        <%= article.summary %>


        <%= link_to 'Continue reading...', article if article.data['read_more'] %>
      </article>
    </li>
  <% end %>
</ol>
